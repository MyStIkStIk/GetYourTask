@model TasksLogic
@{
    ViewData["Title"] = "Home Page";
}
<div class="dailyBackground">
    <div class="row block-tables">

        <div class="col-4 block-daily-tasks">
            <div class="table">
                <div class="block-add">
                    <i class="fa fa-plus"></i>
                </div>
                <p class="table-name date-table" date="@DateTime.Now.ToString("dd.MM")"> Task on @DateTime.Now.ToString("dd.MM")</p>
                <div class="task">
                    @if (Model != null)
                    {
                        @foreach (var task in Model.DTasks)
                        {
                            if (task.Done == false)
                            {
                                <div class="current-task">
                                    <div>
                                        <p done="@task.Done" task-id="@task.TaskID" time=@DateTime.Parse(@task.Time.ToString()).ToString("HH:mm")>@task.Task</p>
                                    </div>
                                    <button class="task-change-button change-button">
                                        <i class="fa fa-cog"></i>
                                    </button>
                                    <button class="task-change-button close-button">
                                        <i class="fa fa-times"></i>
                                    </button>
                                    <form asp-controller="task" asp-action="donedtask">
                                        <input asp-for="Done" value="@task.Done" class="form-input" />
                                        <input asp-for="TaskID" value="@task.TaskID" class="form-input" />
                                        <button class="task-change-button done-button" type="submit">
                                            <i class="fa fa-check"></i>
                                        </button>
                                    </form>
                                </div>
                            }
                            else
                            {
                                <div class="current-task">
                                    <div>
                                        <p done="@task.Done" task-id="@task.TaskID" time=@DateTime.Parse(@task.Time.ToString()).ToString("HH:mm")><del>@task.Task</del></p>
                                    </div>
                                    <button class="task-change-button change-button">
                                        <i class="fa fa-cog"></i>
                                    </button>
                                    <button class="task-change-button close-button">
                                        <i class="fa fa-times"></i>
                                    </button>
                                    <form asp-controller="task" asp-action="donedtask">
                                        <input asp-for="Done" value="@task.Done" class="form-input" />
                                        <input asp-for="TaskID" value="@task.TaskID" class="form-input" />
                                        <button class="task-change-button done-button" type="submit">
                                            <i class="fa fa-check"></i>
                                        </button>
                                    </form>
                                </div>
                            }
                        }
                    }
                </div>
            </div>
        </div>

        <div class="col-4 block-everyday-tasks">
            <div class="table">
                <div class="block-add">
                    <i class="fa fa-plus"></i>
                </div>
                <p class="table-name"> Everyday tasks</p>
                <div class="task">
                    @if (Model != null)
                    {
                        @foreach (var task in Model.ETasks)
                        {
                            if (task.Done == false)
                            {
                                <div class="current-task">
                                    <div>
                                        <p done="@task.Done" task-id="@task.TaskID" time=@task.Time.ToString(@"hh\:mm")>@task.Task</p>
                                    </div>
                                    <button class="task-change-button change-button">
                                        <i class="fa fa-cog"></i>
                                    </button>
                                    <button class="task-change-button close-button">
                                        <i class="fa fa-times"></i>
                                    </button>
                                    <form asp-controller="task" asp-action="doneetask">
                                        <input asp-for="Done" value="@task.Done" class="form-input" />
                                        <input asp-for="TaskID" value="@task.TaskID" class="form-input" />
                                        <button class="task-change-button done-button" type="submit">
                                            <i class="fa fa-check"></i>
                                        </button>
                                    </form>
                                </div>
                            }
                            else
                            {
                                <div class="current-task">
                                    <div>
                                        <p done="@task.Done" task-id="@task.TaskID" time=@task.Time.ToString(@"hh\:mm")><del>@task.Task</del></p>
                                    </div>
                                    <button class="task-change-button change-button">
                                        <i class="fa fa-cog"></i>
                                    </button>
                                    <button class="task-change-button close-button">
                                        <i class="fa fa-times"></i>
                                    </button>
                                    <form asp-controller="task" asp-action="doneetask">
                                        <input asp-for="Done" value="@task.Done" class="form-input" />
                                        <input asp-for="TaskID" value="@task.TaskID" class="form-input" />
                                        <button class="task-change-button done-button" type="submit">
                                            <i class="fa fa-check"></i>
                                        </button>
                                    </form>
                                </div>
                            }
                        }
                    }
                </div>
            </div>
        </div>

        <div class=" col-4 block-noterms-tasks">
            <div class="table">
                <div class="block-add">
                    <i class="fa fa-plus"></i>
                </div>
                <p class="table-name"> No-term tasks</p>
                <div class="task">
                    @if (Model != null)
                    {
                        @foreach (var task in Model.NTasks)
                        {
                            if (task.Done == false)
                            {
                                <div class="current-task">
                                    <div>
                                        <p done="@task.Done" task-id="@task.TaskID">@task.Task</p>
                                    </div>
                                    <button class="task-change-button change-button">
                                        <i class="fa fa-cog"></i>
                                    </button>
                                    <button class="task-change-button close-button">
                                        <i class="fa fa-times"></i>
                                    </button>
                                    <form asp-controller="task" asp-action="donentask">
                                        <input asp-for="Done" value="@task.Done" class="form-input" />
                                        <input asp-for="TaskID" value="@task.TaskID" class="form-input" />
                                        <button class="task-change-button done-button" type="submit">
                                            <i class="fa fa-check"></i>
                                        </button>
                                    </form>
                                </div>
                            }
                            else
                            {
                                <div class="current-task">
                                <div>
                                        <p done="@task.Done" task-id="@task.TaskID"><del>@task.Task</del></p>
                                </div>
                                <button class="task-change-button change-button">
                                    <i class="fa fa-cog"></i>
                                </button>
                                <button class="task-change-button close-button">
                                    <i class="fa fa-times"></i>
                                </button>
                                <form asp-controller="task" asp-action="donentask">
                                    <input asp-for="Done" value="@task.Done" class="form-input" />
                                    <input asp-for="TaskID" value="@task.TaskID" class="form-input" />
                                    <button class="task-change-button done-button" type="submit">
                                        <i class="fa fa-check"></i>
                                    </button>
                                </form>
                            </div>
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
