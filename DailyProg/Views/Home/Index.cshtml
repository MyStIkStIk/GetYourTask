@model Tasks
@{
    ViewData["Title"] = "Home Page";
}
<div class="dailyBackground">
    @*<div class="top-background">
        <div class="title">
            <p class="title-text">NameOfApp</p>
        </div>
        <div class="block-account">
            <div class="button">
                <p class="button-name">Account</p>
            </div>
            <div class="account-info">
                <div class="info-item type1 account">

                </div>
                <div class="info-item type1 settings">

                </div>
                <div class="info-item exit">
                </div>
            </div>
        </div>
    </div>*@

    <div class="row block-tables">

        <div class="col-md-4 block-daily-tasks">
            <div class="table">
                <div class="block-add">
                    <i class="fa fa-plus"></i>
                </div>
                <p class="table-name"> Список дел на @Model.CurrentDay</p>
                <div class="task">
                    @foreach (var task in Model.DTasks)
                    {
                        <div class="current-task">
                            <div>
                                <p time=@task.Time>@task.Task</p>
                            </div>
                            <div class="task-change-button change-button">
                                <i class="fa fa-cog"></i>
                            </div>
                            <div class="task-change-button done-button">
                                <i class="fa fa-check"></i>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4 block-everyday-tasks">
            <div class="table">
                <div class="block-add">
                    <i class="fa fa-plus"></i>
                </div>
                <p class="table-name"> Ежедневные задачи</p>
                <div class="task">
                    @foreach (var task in Model.ETasks)
                    {
                        <div class="current-task">
                            <div>
                                <p time=@task.Time>@task.Task</p>
                            </div>
                            <div class="task-change-button change-button">
                                <i class="fa fa-cog"></i>
                            </div>
                            <div class="task-change-button done-button">
                                <i class="fa fa-check"></i>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class=" col-md-4 block-noterms-tasks">
            <div class="table">
                <div class="block-add">
                    <i class="fa fa-plus"></i>
                </div>
                <p class="table-name"> Бессрочные задачи</p>
                <div class="task">
                    @foreach (var task in Model.NTasks)
                    {
                        <div class="current-task">
                            <div>
                                <p>@task.Task</p>
                            </div>
                            <div class="task-change-button change-button">
                                <i class="fa fa-cog"></i>
                            </div>
                            <div class="task-change-button done-button">
                                <i class="fa fa-check"></i>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="add-task-background">
    <div class="add-daily-form table">
        <div class="block-close">
            <div class="button-close">
            </div>
        </div>
        <div class="form">
            <p class="add-text">Укажите дату</p>
            <input class="field"/>
        </div>
        <div class="form">
            <p class="add-text">Укажите время</p>
            <input class="field"/>
        </div>
        <div class="form">
            <p class="add-text">Укажите задачу</p>
            <input class="field"/>
        </div>
        <button class="add-task">
            <p class="add-text">Добавить задачу</p>
        </button>
    </div>
    <div class="add-everyday-form table">
        <div class="block-close">
            <div class="button-close">
            </div>
        </div>
        <div class="form">
            <p class="add-text">Укажите время</p>
            <input class="field" name="time"/>
        </div>
        <div class="form">
            <p class="add-text">Укажите задачу</p>
            <input class="field" name="task"/>
        </div>
        <button class="add-task">
            <p class="add-text">Добавить задачу</p>
        </button>
    </div>
    <div class="add-noterms-form table">
        <div class="block-close">
            <div class="button-close">
            </div>
        </div>
        <div class="form">
            <p class="add-text">Укажите задачу</p>
            <input class="field n-task" name="task"/>
        </div>
        <button class="add-task add-n-task">
            <p class="add-text">Добавить задачу</p>
        </button>
    </div>
</div>
