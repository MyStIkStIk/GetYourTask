@model GetTodayTask
@{
    ViewData["Title"] = "Home Page";
}
<div class="dailyBackground">
    <div class="row top-background">
        <div class="col-md-4 title">
            <p class="title-text">NameOfApp</p>
        </div>
        <div class="col-md-8 block-config">
            <div class="block-button1">
                <div class="button">
                    <p class="button-name">Button1</p>
                </div>
            </div>
            <div class="block-button2">
                <div class="button">
                    <p class="button-name">Button2</p>
                </div>
            </div>
            <div class="block-button3">
                <div class="button">
                    <p class="button-name">Button3</p>
                </div>
            </div>
            <div class="block-account">
                <div class="account-button button">
                    <p class="button-name">Account</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row block-tables">

        <div class="col-md-4 block-daily-tasks">
            <div class="table">
                <p class="table-name"> Список дел на @Model.CurrentDay</p>
                <div class="task">
                    @foreach (var task in Model.Tasks)
                    {
                        <div class="current-task">
                            <div>
                                <p>@task.Time</p>
                            </div>
                            <div>
                                <p>@task.Task</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4 block-everyday-tasks">
            <div class="table">
                <p class="table-name"> Ежедневные задачи</p>
                <div class="task">
                    @foreach (var task in Model.Tasks)
                    {
                        <div class="current-task">
                            <div>
                                <p>@task.Time</p>
                            </div>
                            <div>
                                <p>@task.Task</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class=" col-md-4 block-noterms-tasks">
            <div class="table">
                <p class="table-name"> Бессрочные задачи</p>
                <div class="task">
                    @foreach (var task in Model.Tasks)
                    {
                        <div class="current-task">
                            <div>
                                <p>@task.Time</p>
                            </div>
                            <div>
                                <p>@task.Task</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="add-task-background">

    </div>
</div>
